  "author": "NoobTenLuka",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.16",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.2"
  },
  "dependencies": {},
  "files": [
    "lib/**/*"
  ]
